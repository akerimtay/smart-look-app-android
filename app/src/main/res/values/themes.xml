<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialogStyle</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.TextInputLayoutOutlinedBoxWhite" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/selector_text_input_layout_box</item>
        <item name="hintTextColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="hintTextAppearance">@style/textStyleRegular14</item>
        <item name="android:theme">@style/TextInputLayoutOutlinedBoxWhite.Theme</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">@style/textStyleBold16</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="AppTheme.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/textStyleBold16</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlActivated">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhiteAlpha70</item>
        <item name="android:textAppearance">@style/textStyleRegular16</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="TextInputLayoutOutlinedBoxWhite.Theme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTheme.TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogTheme.BodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogTheme.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogTheme.ButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogTheme.ButtonStyle</item>
    </style>

    <style name="AlertDialogTheme.TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAppearance">@style/textStyleBold20</item>
    </style>

    <style name="AlertDialogTheme.BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAppearance">@style/textStyleRegular14</item>
    </style>

    <style name="AlertDialogTheme.ButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="rippleColor">@color/colorWhiteAlpha70</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorPrimaryDark</item>
        <item name="colorOnSurface">@color/colorWhite</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/radius_value</item>
    </style>

    <style name="AppTheme.MaterialToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:contentInsetStartWithNavigation">@dimen/toolbar_start_inset</item>
        <item name="titleTextAppearance">@style/textStyleRegular18</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetModalStyle</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="MaterialAlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhiteAlpha50</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialogButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/MaterialAlertDialogButtonStyle</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorBlueLight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

</resources>